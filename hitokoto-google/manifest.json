{
  "manifest_version": 3,
  "name": "Daily Floating Quote",
  "version": "1.0",
  "description": "Adds a daily floating motivational quote to the Google new tab page.",
  "permissions": ["storage"],
  "action": {
    "default_icon": {
      "16": "/images/icon.jpg",
      "48": "/images/icon.jpg",
      "128": "/images/icon.jpg"
    },
    "default_title": "zh1"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"],
      "css": ["index.css"]
    }
  ]
}
